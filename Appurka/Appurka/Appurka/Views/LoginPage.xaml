<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Appurka.Views.LoginPage">
  <ContentView.Content>
    <StackLayout>
      <Label Text="Email" />
      <Entry Text="{Binding Email}"></Entry>
      <Label Text="Passsword" />
      <Entry Text="{Binding Password}"></Entry>
      <Button Command="{Binding DoLogin}" Text="Log in"></Button>
      <Button Command="{Binding DoLoginFacebook}" Text="Log in with Facebook"></Button>
    </StackLayout>
  </ContentView.Content>
</ContentView>

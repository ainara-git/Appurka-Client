<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Appurka.Views.LoginPage">


  <StackLayout Margin="10" HorizontalOptions="Fill" VerticalOptions="Center" Orientation="Vertical">
    <Label Text="Email" />
    <Entry Text="{Binding Email}"></Entry>
    <Label Text="Passsword" />
    <Entry Text="{Binding Password}"></Entry>
    <Button Command="{Binding LoginCommand}" Text="Log in"></Button>
    <Button Command="{Binding FacebookCommand}" Text="Log in with Facebook"></Button>
  </StackLayout>
  
</ContentPage>